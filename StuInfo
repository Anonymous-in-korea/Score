package Student;

import java.util.Scanner;

public class StuInfo {

	Scanner sc = new Scanner(System.in);
	int choice, count, kor, eng, math, total, checkNo, rnum, rank, flag;
	double avg;
	String name, grade, checkName;
	String[] title = {"이름","국어","영어","수학","총점","평균","등수","학점"};
	
	StuInfo(){}
	
	StuInfo(String name, int kor, int eng, int math, int total, double avg, int rank, String grade) {
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.math = math;
		this.total = this.kor + this.eng + this.math;
		this.avg = this.total / 3.0;
		this.rank = rank;
		this.grade = grade;
	}
	
}
